<main id="upcoming-lunch">
  <div class="row">
    <div class="col-6 col">
      <p class="larger-text">
      wubba lubba dub dub !!!
      <%= image_tag "rick" %>
      </p>
      <p class="larger-text">
        The next scheduling will take place on:
        <u class="full-date"><%= get_next_scheduling_date.strftime('%b, %d, %Y') %></u>
      </p>
    </div>

    <aside class="col-6 col">
      <div id="meme-container">
        <%= image_tag random_meme_filename %>
      </div>
    </aside>
  </div>
  <div class="larger-text row countdown-timer-container" 
       data-controller="countdown-timer" 
       data-countdown-timer-upcoming-date-timestamp-value="<%= unix_timestamp_of(get_next_scheduling_date) %>"
       data-countdown-timer-tomorrow-date-timestamp-value="<%= unix_timestamp_of(Date.tomorrow) %>">
       <p id="countdown-timer" class="countdown-timer" data-countdown-timer-target="timerDisplayer"></p>
  </div>
</main>
