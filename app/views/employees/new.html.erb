<div class="container paper row">
  <h1>Create Account</h1>
  <div class="form-group col-6">
    <%= form_with model: @employee do |f| %>
      <%= render 'shared/error_messages' %>
      <div class='padding-small'>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class='padding-small'>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
      <div class='padding-small'>
        <%= f.label :username %><sup class="required">*</sup>
        <%= f.text_field :username, required: true %>
      </div>
      <div class='padding-small'>
        <%= f.label :email %><sup class="required">*</sup>
        <%= f.email_field :email, required: true %>
      </div>
      <div class='padding-small'>
        <%= f.label :password %><sup class="required">*</sup>
        <%= f.password_field :password, required: true %>
      </div>
      <div class='padding-small'>
        <%= f.label :password_confirmation %><sup class="required">*</sup>
        <%= f.password_field :password_confirmation, required: true %>
      </div>
      <div class="padding-small center">
        <%= f.submit "Create Account", class: "paper-btn btn-success", data: { "disable-with": "submitting..." } %>
      </div>
    <% end %>
  </div>
  <div class="info col-6">
    <%= image_tag 'uncle_sam.jpeg' %>
  </div>
</div>
